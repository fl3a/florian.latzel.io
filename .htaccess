AuthType Basic
AuthName "Safe Playground"
AuthUserFile /var/www/virtual/fl3a/.htuser
Require valid-user

# Redirects
Redirect 301 /node/1630 /2014/08/28/facebook-tschoe-mit-oe-mit-oe 
Redirect 301 /book/export/html/667 /gnupg-micro-howto.html
