{%- if paginator -%}
  {%- if page.url contains "/page/" -%}
    {%- capture title -%}
    Blog, Seite {{ paginator.page }} von {{ paginator.total_pages }} - {{ site.title | escape }}
    {%- endcapture -%}
  {%- endif -%}
  {%- if page.url contains "/tags/" -%}
    {%- if paginator.page and paginator.total_pages > 1 and paginator.page > 1  -%}
      {%- capture title -%}
      {{ page.autopages.display_name }}, Seite {{ paginator.page }} von {{ paginator.total_pages }} - {{ site.title | escape }}
      {%- endcapture -%}
    {%- else -%}
      {%- capture title -%}
      {{ page.autopages.display_name }} - {{ site.title | escape }}
      {%- endcapture -%}
    {%- endif -%}
  {%- endif -%}
{%- endif -%}
